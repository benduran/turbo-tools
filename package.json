{
  "description": "A collection of TurboRepo CLI tools to test, lint, build, version and publish packages in your Turborepo monorepo",
  "name": "@better-builds/turbo-tools",
  "version": "7.1.3-beta.0",
  "exports": "./dist/index.js",
  "bin": "./dist/cli.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "packageManager": "npm@10.8.1",
  "files": [
    "dist/"
  ],
  "license": "MPL-2.0",
  "keywords": [
    "turbo",
    "tools",
    "monorepo",
    "publishing",
    "versioning",
    "easy-to-use",
    "magic"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benduran/turbo-tools.git"
  },
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc --project ./tsconfig.json",
    "lint": "eslint --no-error-on-unmatched-pattern './src/**/*.{tsx,ts,jsx,js,mjs}'",
    "lint:fix": "npm run lint -- --fix",
    "start": "tsx src/cli.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --project ./tsconfig.json",
    "typecheck:staged": "tsc --noEmit --allowJs --skipLibCheck"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.32",
    "eslint-config-react-yas": "^5.1.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.16.2",
    "type-fest": "^4.21.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@better-builds/lets-version": "^1.1.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@npmcli/map-workspaces": "^3.0.6",
    "app-root-path": "^3.1.0",
    "comment-json": "^4.2.3",
    "deepmerge": "^4.3.1",
    "detect-package-manager": "^3.0.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts}": [
      "eslint",
      "npm run typecheck:staged --"
    ]
  }
}